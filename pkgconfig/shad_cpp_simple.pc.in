prefix=@CMAKE_INSTALL_PREFIX@
exec_prefix=${prefix}
includedir=${prefix}/include
libdir=${exec_prefix}/lib

Name: @CMAKE_PROJECT_NAME@_TBB
Description: SHAD - Scalable and High-Performance Algorithms and Data-Structures, TBB Backend.
Version: @PACKAGE_VERSION@
Cflags: @CMAKE_CXX_FLAGS@ -D HAVE_CPP_SIMPLE=1 -I${includedir}
Libs: -L${libdir} -Wl,-rpath,${libdir} -lcpp_simple_runtime -lutils @LINK_FLAGS@
